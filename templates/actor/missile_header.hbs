{{! Sheet Header }}
<header class='sheet-header'>
  <img
    class='profile-img'
    src='{{actor.img}}'
    data-edit='img'
    data-action='onEditImage'
    title='{{actor.name}}'
    height='100'
    width='100'
  />
  <div class='header-fields'>
    <div class='document-name'>
      <input
        name='name'
        type='text'
        value='{{actor.name}}'
        placeholder='Name'
      />
    </div>
    {{! The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  }}
    <div class='resources grid grid-8col'>

      {{! "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. }}
      <div class='resource flex-group-center'>
        <label for='system.guidance' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.guidance'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            type='text'
            disabled='true'
            name='system.guidance'
            value='{{system.guidance}}'
            data-dtype='String'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.aspect' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.aspect'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.aspect'
            value='{{system.aspect}}'
            data-dtype='String'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.lock' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.lock'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.lock'
            value='{{system.lock}}'
            data-dtype='String'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.minRange' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.minRange'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.minRange'
            value='{{system.minRange}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.maxRange' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.maxRange'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.maxRange'
            value='{{system.maxRange}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.hit' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.hit'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.hit'
            value='{{system.hit}}'
            data-dtype='Number'
          />
        </div>
      </div>

      <div class='resource flex-group-center'>
        <label for='system.damage' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.damage'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.damage'
            value='{{system.damage}}'
            data-dtype='String'
          />
        </div>
      </div>

            <div class='resource flex-group-center'>
        <label for='system.load' class='resource-label'>
          {{localize 'AIR_MERCS.Actor.base.FIELDS.load'}}
        </label>
        <div class='resource-content flexrow flex-center flex-between'>
          <input
            disabled='true'
            type='text'
            name='system.load'
            value='{{system.load}}'
            data-dtype='Number'
          />
        </div>
      </div>


      <div class='resource flex-group-center'>
        {{#if (eq actor.type 'character')}}
          <label class='resource-label'>
            {{localize 'AIR_MERCS.Actor.Character.FIELDS.attributes.level.value.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.attributes.level.value'
              value='{{system.attributes.level.value}}'
              data-dtype='Number'
            />
          </div>
        {{/if}}
        {{#if (eq actor.type 'npc')}}
          <label class='resource-label'>
            {{localize 'AIR_MERCS.Actor.NPC.FIELDS.cr.label'}} / {{localize 'AIR_MERCS.Actor.NPC.xp.label'}}
          </label>
          <div class='resource-content flexrow flex-center flex-between'>
            <input
              type='text'
              name='system.cr'
              value='{{system.cr}}'
              data-dtype='Number'
            />
            <span></span>
            <input
              type='text'
              disabled='true'
              name='system.xp'
              value='{{system.xp}}'
              data-dtype='Number'
            />
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</header>