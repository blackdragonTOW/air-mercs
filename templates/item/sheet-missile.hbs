<div class='item flexrow' data-item-id='{{id}}' data-drag='true' data-document-class='Item'>


    <div class='item-image item-sheet-image'>
        <img src='systems/air-mercs/assets/missiles/r27ea.png' width='100' height='35'/>
    </div>

    <div class='missile-name'>
        <b>{{system.name}}</b>
    </div>

    <div class="center-content">
        <div class="flexrow">
            <div class="row-guidance"><b>Guidance:</b> {{system.guidance}}</div>
            <div class="row-lock"><b>Lock:</b> {{system.lock}}</div>
            <div class="row-damage"><b>Damage:</b> {{system.damage}}</div>
            <div class="row-hit"><b>Hit On:</b> {{system.hit}}+</div>
            
        </div>
        <div class="flexrow">
            <div class="row-range"><b>Min Range:</b> {{system.minRange}}</div>
            <div class="row-range"><b>Max Range:</b> {{system.maxRange}}</div>
            <div class="row-aspect"><b>Aspect:</b> {{system.aspect}}</div>
            
            <div class="row-load"><b>Load:</b> {{system.load}}</div>
        </div>
    </div>

    <div id='jettison-select'>
        <button type='button' class='jettison-button' data-action='jettisonButton'>JETT</button>
    </div>

</div>

